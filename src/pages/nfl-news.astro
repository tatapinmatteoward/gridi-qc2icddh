---
import Layout from '../layouts/Layout.astro';

const pageTitle = "NFL News - Gridiron Gazette";
const pageDescription = "Stay updated with the latest NFL breaking news, player trades, injury reports, and game analysis from your ultimate source for football insights.";

const breakingNews = [
  {
    id: 1,
    title: "Tom Brady's Epic Comeback? Rumors Swirl Around Legendary QB",
    excerpt: "In a shocking twist, sources close to the Tampa Bay Buccaneers hint that the seven-time Super Bowl champion might unretire for one last run. Brady, who hung up his cleats after the 2022 season, has been spotted in intense training sessions. Fans are buzzing â€“ could this mean a reunion with a familiar face? Stay tuned for official confirmation.",
    category: "Breaking News",
    timestamp: "2 hours ago"
  },
  {
    id: 2,
    title: "Eagles Trade Shocker: Hurts for a Star WR?",
    excerpt: "The Philadelphia Eagles are making waves with a potential blockbuster trade that could reshape their receiving corps. Sources indicate they're looking to acquire a proven starting wide receiver in exchange for their promising quarterback. The deal could be finalized before the trade deadline.",
    category: "Trades",
    timestamp: "5 hours ago"
  },
  {
    id: 3,
    title: "Injury Report: Titans' Star RB Out for Season",
    excerpt: "The Tennessee Titans announced that their star running back has suffered a season-ending injury that will sideline him for the remainder of the 2023 season. This devastating blow comes at a crucial time for the team as they battle for playoff positioning.",
    category: "Injuries",
    timestamp: "8 hours ago"
  }
];

const featuredNews = [
  {
    id: 4,
    title: "Super Bowl Predictions: Experts Weigh In",
    excerpt: "As we approach the most anticipated game of the year, experts from across the league are offering their take on who will emerge victorious in the championship showdown.",
    category: "Analysis",
    timestamp: "1 day ago"
  },
  {
    id: 5,
    title: "Coaching Changes: What's Next for NFL Teams",
    excerpt: "With the season in full swing, several coaching positions are under scrutiny as teams look to gain a competitive edge in their bid for playoff positioning.",
    category: "Analysis",
    timestamp: "1 day ago"
  },
  {
    id: 6,
    title: "Fantasy Football: Top Picks for the Week",
    excerpt: "Our expert analysts break down the best players to target in your fantasy leagues and provide projections for the upcoming matchup.",
    category: "Fantasy",
    timestamp: "1 day ago"
  }
];
---

<Layout title={pageTitle} description={pageDescription}>
  <!-- Hero Section -->
  <div class="relative bg-gradient-to-r from-[#b71c1c] to-[#8b0000] py-20 overflow-hidden">
    <div class="absolute inset-0 bg-black opacity-30"></div>
    <div class="container mx-auto px-4 relative z-10">
      <div class="flex flex-col md:flex-row items-center justify-between">
        <div class="md:w-1/2 mb-10 md:mb-0">
          <h1 class="text-4xl md:text-6xl font-bold text-white mb-6 leading-tight">
            NFL News <br />
            <span class="text-[#ffd700]">Gridiron Gazette</span>
          </h1>
          <p class="text-xl text-white opacity-90 max-w-lg">
            Your Ultimate Source for NFL and Baseball Insights
          </p>
        </div>
        <div class="md:w-1/2 flex justify-center">
          <div class="bg-white p-6 rounded-lg shadow-2xl transform rotate-3">
            <div class="bg-gray-200 border-2 border-dashed rounded-xl w-64 h-64 flex items-center justify-center">
              <i class="fas fa-football-ball text-[#b71c1c] text-6xl"></i>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>

  <!-- Breaking News Section -->
  <section class="py-16 bg-gray-900">
    <div class="container mx-auto px-4">
      <div class="flex items-center mb-12">
        <div class="h-1 w-20 bg-[#ffd700] mr-4"></div>
        <h2 class="text-3xl font-bold text-white">Breaking News</h2>
        <div class="h-1 flex-grow bg-gray-700 ml-4"></div>
      </div>

      <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-8">
        {breakingNews.map((news) => (
          <div key={news.id} class="bg-gray-800 rounded-xl overflow-hidden shadow-2xl transform transition duration-500 hover:scale-105">
            <div class="p-6">
              <div class="flex justify-between items-start mb-4">
                <span class="inline-block px-3 py-1 bg-[#b71c1c] text-white text-sm font-bold rounded-full">
                  {news.category}
                </span>
                <span class="text-gray-400 text-sm">{news.timestamp}</span>
              </div>
              <h3 class="text-xl font-bold text-white mb-3">{news.title}</h3>
              <p class="text-gray-300 mb-4">{news.excerpt}</p>
              <button class="text-[#ffd700] font-bold flex items-center hover:text-[#ffec8b] transition-colors">
                Read More
                <i class="fas fa-arrow-right ml-2"></i>
              </button>
            </div>
          </div>
        ))}
      </div>
    </div>
  </section>

  <!-- Featured Content -->
  <section class="py-16 bg-gradient-to-b from-gray-900 to-black">
    <div class="container mx-auto px-4">
      <div class="flex items-center mb-12">
        <div class="h-1 w-20 bg-[#ffd700] mr-4"></div>
        <h2 class="text-3xl font-bold text-white">Featured Insights</h2>
        <div class="h-1 flex-grow bg-gray-700 ml-4"></div>
      </div>

      <div class="grid grid-cols-1 lg:grid-cols-3 gap-8">
        <div class="lg:col-span-2">
          <div class="bg-gradient-to-r from-[#b71c1c] to-[#8b0000] rounded-xl overflow-hidden">
            <div class="p-8">
              <div class="flex items-center mb-4">
                <span class="inline-block px-3 py-1 bg-[#ffd700] text-black font-bold rounded-full">
                  Featured
                </span>
                <span class="text-gray-200 ml-4">1 day ago</span>
              </div>
              <h2 class="text-3xl font-bold text-white mb-4">Super Bowl Predictions: Experts Weigh In</h2>
              <p class="text-gray-200 text-lg mb-6">
                As we approach the most anticipated game of the year, experts from across the league are offering their take on who will emerge victorious in the championship showdown. With both teams showing exceptional form this season, the stakes couldn't be higher for these legendary matchups.
              </p>
              <div class="flex items-center">
                <button class="bg-[#ffd700] text-black font-bold px-6 py-3 rounded-lg hover:bg-[#ffec8b] transition-colors">
                  Read Full Analysis
                </button>
                <div class="ml-4 text-white">
                  <i class="fas fa-clock mr-2"></i>
                  <span>8 min read</span>
                </div>
              </div>
            </div>
          </div>
        </div>

        <div class="space-y-8">
          {featuredNews.map((news) => (
            <div key={news.id} class="bg-gray-800 rounded-xl p-6 hover:bg-gray-700 transition-colors">
              <div class="flex justify-between items-start mb-4">
                <span class="inline-block px-3 py-1 bg-[#b71c1c] text-white text-sm font-bold rounded-full">
                  {news.category}
                </span>
                <span class="text-gray-400 text-sm">{news.timestamp}</span>
              </div>
              <h3 class="text-xl font-bold text-white mb-3">{news.title}</h3>
              <p class="text-gray-300 mb-4">{news.excerpt}</p>
              <button class="text-[#ffd700] font-bold flex items-center hover:text-[#ffec8b] transition-colors">
                <i class="fas fa-chevron-right mr-2"></i>
                Read More
              </button>
            </div>
          ))}
        </div>
      </div>
    </div>
  </section>

  <!-- Newsletter Section -->
  <section class="py-16 bg-gradient-to-r from-[#8b0000] to-[#b71c1c]">
    <div class="container mx-auto px-4 text-center">
      <div class="max-w-3xl mx-auto">
        <h2 class="text-3xl md:text-4xl font-bold text-white mb-6">Stay Ahead of the Game</h2>
        <p class="text-xl text-white opacity-90 mb-10">
          Get breaking NFL news, expert analysis, and exclusive insights delivered straight to your inbox every weekday.
        </p>
        
        <div class="flex flex-col sm:flex-row gap-4 max-w-xl mx-auto">
          <input 
            type="email" 
            placeholder="Enter your email" 
            class="flex-grow px-6 py-4 rounded-lg text-gray-800 focus:outline-none focus:ring-2 focus:ring-[#ffd700]"
          />
          <button class="bg-[#ffd700] text-black font-bold px-8 py-4 rounded-lg hover:bg-[#ffec8b] transition-colors whitespace-nowrap">
            Subscribe Now
          </button>
        </div>
      </div>
    </div>
  </section>
</Layout>

<style>
  @keyframes pulse {
    0% { box-shadow: 0 0 0 0 rgba(255, 215, 0, 0.4); }
    70% { box-shadow: 0 0 0 10px rgba(255, 215, 0, 0); }
    100% { box-shadow: 0 0 0 0 rgba(255, 215, 0, 0); }
  }

  .pulse-border {
    animation: pulse 2s infinite;
  }

  .news-card:hover {
    transform: translateY(-5px);
    box-shadow: 0 20px 25px -5px rgba(0, 0, 0, 0.5), 0 10px 10px -5px rgba(0, 0, 0, 0.2);
  }
</style>